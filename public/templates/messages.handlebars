{{#if messages.length}}
    {{#each messages}}
        <div class="flex">
            <div class="flex px-2">
                <span style="color: #{{author.name_color}}">{{ author.display_name }}: </span>
            </div>
            <span>{{ message }}</span>
        </div>
    {{/each}}
{{else}}
    <div class="text-center w-full">
        <h2>No messages yet</h2>
    </div>
{{/if}}